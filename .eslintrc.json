{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": 1,
    "no-cond-assign": 2,
    "no-console": 1,
    "no-constant-condition": 1,
    "no-control-regex": 1,
    "no-debugger": 2,
    "no-dupe-args": 1,
    "no-dupe-keys": 2,
    "no-duplicate-case": 1,
    "no-empty-character-class": 1,
    "no-empty": 1,
    "no-ex-assign": 1,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 1,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": 1,
    "no-invalid-regexp": 1,
    "no-irregular-whitespace": 1,
    "no-negated-in-lhs": 1,
    "no-obj-calls": 1,
    "no-regex-spaces": 1,
    "no-sparse-arrays": 1,
    "no-unreachable": 1,
    "use-isnan": 1,
    "valid-typeof": 1,
    "curly": 2,
    "eqeqeq": 2,
    "no-implicit-coercion": 2,
    "no-octal": 1,
    "no-redeclare": 1,
    "no-delete-var": 1,
    "no-undef": 1,
    "no-unused-vars": 1,
    "array-bracket-spacing": 1,
    "brace-style": 1,
    "camelcase": 1,
    "max-nested-callbacks": [2,3],
    "space-infix-ops": 1,
    "keyword-spacing": 1,
    "arrow-spacing": [1,{"before":true,"after":true}],
    "constructor-super": 2,
    "no-const-assign": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "prefer-const": 2,
    "prefer-spread": 1,
    "prefer-object-spread": 2,
    "max-len": [ 2, 80, 4 ],
    "prefer-destructuring" : [
      "error",
      {
        "array": true,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "prefer-arrow-callback": "error"
  }
}
